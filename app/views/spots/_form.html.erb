    <%= simple_form_for (spot) do |f| %>
      <%= f.input :name,label: false,placeholder: "spot name" %>
      <%#= f.input :configuration %>
      <%= f.input :label, label: false, placeholder: "short name, appear in the wizard" %>
      <%= f.input :sport, as: :radio_buttons, collection: Spot::SPORT ,wrapper: :horizontal_collection_inline %>
      <%= f.collection_check_boxes :wind_direction_ids, WindDirection.all, :id, :direction do |b| %>
        <div class="collection-check-box">
          <%= b.check_box %>
          <%= b.label %>
        </div>
      <% end %>
      <%#= f.input :wind_direction,required:false, as: :check_boxes, collection: Spot::DIRECTION %>
      <%= f.input :wind_force_mini,required:false, label:false, prompt: "Wind Force Minimum (Knots)", collection: 1..45 %>
      <%= f.input :wind_force_maxi,required:false, label:false, prompt: "Wind Force Maximum (Knots)", collection: 1..45 %>
      <%= f.input :tide_mini,required:false, label:false, prompt: "Tide minimum height", collection: 0..12 %>
      <%= f.input :tide_max,required:false, label:false, prompt: "Tide maximum height",collection: 0..12 %>
      <%= f.input :low_tide,required:false %>
      <%= f.input :mid_tide,required:false %>
      <%= f.input :high_tide,required:false %>
      <%= f.input :coeff_mini,required:false,label:false, prompt: "minimum tide coeff", collection: 20..120 %>
      <%= f.input :coeff_maxi,required:false,label:false, prompt: "maximum tide coeff",collection: 20..120 %>
      <%= f.collection_check_boxes :wave_direction_ids, WaveDirection.all, :id, :direction do |b| %>
        <div class="collection-check-box">
          <%= b.check_box %>
          <%= b.label %>
        </div>
      <% end %>

      <%#= f.input :wave_direction,required:false,as: :check_boxes, collection: ['N','NNW','NW','WNW','W','WSW','SW','SSW','S','SSE','SE','ESE','E','ENE','NE','NNE'] %>
      <%= f.input :wave_height_mini,required:false,label:false, prompt: "minimum wave height (meters)", collection: 1..20 %>
      <%= f.input :wave_height_maxi,required:false,label:false, prompt: "maximum wave height (meters)", collection: 1..20 %>
      <%= f.input :periode_mini,required:false,label:false, prompt: "minimum period", collection: 1..20 %>
      <%= f.input :periode_maxi,required:false,label:false, prompt: "maximum period", collection: 1..20 %>
      <%= f.input :windfinder,required:false %>
      <%= f.input :windfindersuper,required:false %>
      <%= f.input :shom,required:false %>
      <%#= f.input :latitude, required:false %>
      <%#= f.input :longitude,required:false %>

      <%= f.submit %>
    <% end %>
